{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Mer Music Player",
  "version": "0.1.0",
  "identifier": "com.mercury.musicplayer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Music Player",
        "userAgent": "Music Player",
        "width": 1250,
        "height": 720,
        "minWidth": 1200,
        "minHeight": 700,
        "center": true,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; media-src 'self' file: blob:; connect-src 'self' ipc: http://ipc.localhost"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.ico",
      "icons/128x128.ico",
      "icons/128x128@2x.ico",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "resources": [],
    "copyright": "",
    "category": "Music",
    "shortDescription": "A modern music player",
    "longDescription": "A modern music player with advanced audio features"
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "dialog": null
  }
}